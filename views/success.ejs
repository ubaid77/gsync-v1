<%- include('partials/header.ejs') %>
<div class="container">
  <div class="page-header text-center">
    <a href="/logout" class="btn btn-primary">Logout</a>
  </div>

  <div class="row">
    <!-- GOOGLE INFORMATION -->
    <div class="col-sm-6">
      <p class="text-center" style="color: #3f3d56; text-transform: uppercase">
        <%= name %>
        <br />

        <img src="<%=pic%>" class="img-fluid" id="display-img" alt="" />
      </p>
    </div>

    <div class="col-sm-6">
      <h3 style="color: #3f3d56">
        Sync your Folder to Google Drive <i class="fab fa-google-drive"></i>
      </h3>

      <form action="/sync" method="POST">
        <div class="form-group">
          <label for="local">Your Local Folder Path</label>
          <input
            type="text"
            id="local"
            class="form-control"
            name="localpath"
            placeholder="eg: C:/drive/stuff"
          />
          <small id="local" class="form-text text-muted"
            >Make sure this directory exists, before proceeding.</small
          >
        </div>
        <div class="form-group">
          <label for="remote">Your Remote/Drive Folder Path</label>
          <input
            type="text"
            id="drive"
            class="form-control"
            name="remotepath"
            placeholder="test/stuff"
          />
          <small id="remote" class="form-text text-muted"
            >If it doesn't exists, it will be automatically created.</small
          >
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-primary">Start Syncing</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include('partials/footer.ejs') %>
